---
# Adjust SoT for dev topology, the idea here is not to have separate SoTs for dev and prod, only adjust hostname and allow connectivity do dev nodes
# Simple vars overwriting just for demo purposes so some vars are redundant here
hostname: a01-dev-rtr1

interfaces:
- name: Ethernet1
  description: to-a01-prod-rtr2
  ipv4_address: 10.0.0.1/30
  switchport: false
  shutdown: false

- name: Ethernet2
  description: to-a01-prod-client1
  ipv4_address: 192.168.1.1/24
  switchport: false
  shutdown: false

- name: Loopback0
  ipv4_address: 172.16.0.1/32
  shutdown: false

- name: Management0
  description: mgmt
  ipv4_address: 172.200.20.2/24
  ipv6_address: 2001:172:200:20::2/64
  shutdown: false

static_routes_ipv4:
- dest: 0.0.0.0/0
  next_hop: 172.200.20.1

static_routes_ipv6:
- dest: ::/0
  next_hop: 2001:172:200:20::1